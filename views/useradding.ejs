<form method="post" action="/admin-user/adduser">   

     <div class="mt-3" style="width: 100%; display: flex; justify-content: center; ">
          <div  style="width: 440px; height: 370px;"  class="border border-success pt-3" >
            <div class="p-1" style="width: 100%; height: 304px;" >
                
              <h4>Add a new user </h4>
              <!-- name box -->
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Name</span>
                    <input name="name" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" required>
                </div>
              <!-- email box -->
                <div class="input-group input-group-sm mb-3">
                  <span class="input-group-text" id="inputGroup-sizing-sm">Email ID</span>
                  <input name="email" type="email" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" required >
                </div>

                 <!-- username box -->
                 <div class="input-group input-group-sm mb-3">
                  <span class="input-group-text" id="inputGroup-sizing-sm">usernmae</span>
                  <input name="username"  type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" required>
                 
                </div>

                 <!-- username box -->
                 <div class="input-group input-group-sm mb-3">
                  <span class="input-group-text" id="inputGroup-sizing-sm">password</span>
                  <input name="password"  type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" >
                 
                </div>
            
              <!-- role box -->
               <label for="">User Type</label>
                <select name="role" class="form-select" aria-label="Default select example">
                  <option value="user">user</option>
                  <option value="admin">admin</option>
                </select>
            </div>



            <div style="display: flex; justify-content: space-around;" >

         <!-- ===========edit user request ==========-->
             
                <button type="submit" class="btn btn-success">Confirm Add </button>
             
                
            </div>
            
