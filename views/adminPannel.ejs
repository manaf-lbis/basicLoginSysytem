<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>


    <!--================ nav bar=============== -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">ADMIN PANNEL</a>
         
          <div class="collapse navbar-collapse" id="navbarScroll">
            <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
              
            </ul>

            <form method="post" action="/admin-user/search" class="form-inline my-2 my-lg-0 d-flex ">
              <input name="username" class="form-control mr-sm-2" type="search" placeholder="Find with username" aria-label="Search">
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>

            <form method="post" action="/admin-user/adduserreq" class="d-flex" role="search">
              <button type="submit" class="btn btn-outline-success mx-3">Add user</button>
            </form>

            <form method="post" action="/logout" class="d-flex" role="search">
              <button class="btn btn-outline-danger" type="submit">Logout</button>
            </form>
          </div>
        </div>
      </nav>
     <!--================ nav bar ends=============== -->

<% if(allUsers && allUsers.length > 0){ %>
 <% for(let element of allUsers ){%>

     <!--========= user details card starts========== -->
     <div class="mt-3" style="width: 100%; display: flex; justify-content: center; ">
          <div  style="width: 440px; height: 260px;"  class="border border-success pt-3" >
            <div class="p-1" style="width: 100%; height: 200px;" >
                
              <!-- name box -->
                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Name</span>
                    <input value = "<%= element.name %>" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" disabled>
                </div>
              <!-- email box -->
                <div class="input-group input-group-sm mb-3">
                  <span class="input-group-text" id="inputGroup-sizing-sm">Email ID</span>
                  <input value = "<%= element.email %>" type="email" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" disabled>
                </div>
              <!-- username box -->
                <div class="input-group input-group-sm mb-3">
                  <span class="input-group-text" id="inputGroup-sizing-sm">Username</span>
                  <input value = "<%= element.username %>" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" disabled>
                </div>
              <!-- role box -->
                <div class="input-group input-group-sm mb-3">
                  <span class="input-group-text" id="inputGroup-sizing-sm">Role</span>
                  <input value = "<%= element.role %>" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" disabled>
                </div>

            </div>
            <div style="display: flex; justify-content: space-around;" >

        <!-- ===========edit user request ==========-->
              <form method="post" action="/admin-user/edit/<%= element.username %>">
                <button type="submit" class="btn btn-success">Edit Details</button>
              </form>
            
        <!-- ===========delete user request ==========-->
              <form method="post" action="/admin-user/delete/<%= element.username %>">
                <button type="submit" class="btn btn-danger">Remove User</button>
              </form>
                
            </div>
          </div>
    </div>
 <!--========= user details card ends========== -->

 <% } %> <!-- for of loop ends -->
<% } %>

 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>